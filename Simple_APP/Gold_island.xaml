<Page x:Class="Simple_APP.Gold_island"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Simple_APP"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="800"
      Title="Gold_island">

    <StackPanel>
        <Button Click="Button_Click" Content="Курение вредно для здоровья" FontSize="40" Height="60" Margin="10"></Button>
        <Button Click="Button_Click_1" Content="Становится скучновато" FontSize="40" Height="60" Margin="10"></Button>
        <Button Click="Button_Click_2" Content="Где карта,Билли?" FontSize="40" Height="60" Margin="10"></Button>
        <Button Click="Button_Click_3" Content="Признаю себя ослом" FontSize="40" Height="60" Margin="10"></Button>
        <Button Click="Button_Click_4" Content="Мы идём на поиски клада" Height="60" FontSize="40" Margin="10"></Button>
        <Button Click="Button_Click_5" Content="Стоп" FontSize="30" Height="80" Width="80" Margin="10"></Button>
        <Button Click="Button_Click_6" VerticalAlignment="Stretch" HorizontalAlignment="Left" Content="←" FontSize="30" Height="80" Width="80" Margin="10"></Button>

    </StackPanel>
</Page>
